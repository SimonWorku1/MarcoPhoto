rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isHost(roomId) {
      return isSignedIn() &&
        request.auth.uid == get(/databases/$(database)/documents/rooms/$(roomId)).data.hostUid;
    }

    match /users/{userId} {
      allow read, create, update: if isSignedIn() && request.auth.uid == userId;
    }

    match /rooms/{roomId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn()
        && request.auth.uid == request.resource.data.hostUid
        && (
          !exists(/databases/$(database)/documents/stats/rooms) ||
          get(/databases/$(database)/documents/stats/rooms).data.count < 15
        );
      allow update: if isSignedIn()
        && request.resource.data.hostUid == resource.data.hostUid
        && request.resource.data.createdAt == resource.data.createdAt
        && request.resource.data.state in ["waiting", "playing"]
        && (
          request.auth.uid == resource.data.hostUid ||
          request.resource.data.diff(resource.data).changedKeys()
            .hasOnly(["playerCount", "lastActiveAt", "waitingSince"])
        );
      allow delete: if false;

      match /players/{playerId} {
        allow read: if isSignedIn();
        allow create, update: if isSignedIn() && request.auth.uid == playerId;
        allow delete: if isSignedIn() && (request.auth.uid == playerId || isHost(roomId));
      }
    }

    match /stats/{docId} {
      allow read, write: if false;
    }
  }
}
